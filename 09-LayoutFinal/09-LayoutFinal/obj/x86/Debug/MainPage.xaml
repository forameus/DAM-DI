<Page
    x:Class="_09_LayoutFinal.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_09_LayoutFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="2" Margin="10">
            <TextBlock>
                <TextBlock.Text>
                    Ejercicio de Layouts Final
                </TextBlock.Text>
            </TextBlock>
        </Border>
        
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="2" Margin="10">
            <TextBlock TextWrapping="Wrap">
                <TextBlock.Text>
                    This is my first TextBlock. It contains the same basic text as the others. This is my first TextBlock. It contains the same basic text as the others. This is my first TextBlock. It contains the same basic text as the others.
                </TextBlock.Text>
            </TextBlock>
        </Border>
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid BorderBrush="Black" BorderThickness="2" Margin="10">
                <VariableSizedWrapGrid Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Top" >
                    <Border BorderBrush="Black" BorderThickness="2" Margin="10">
                        <Rectangle MinHeight="120" MinWidth="120" Fill="Orange"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="2" Margin="10">
                        <Rectangle MinHeight="120" MinWidth="120" Fill="Cyan"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="2" Margin="10">
                        <Rectangle MinHeight="120" MinWidth="120" Fill="LightGreen"/>
                    </Border>
                </VariableSizedWrapGrid>
            </Grid>


            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="2.6*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderBrush="Black" BorderThickness="2" Margin="10">
                    <TextBlock TextWrapping="Wrap">
                        <TextBlock.Text>
                        This is my first TextBlock. It contains the same basic text as the others
                        </TextBlock.Text>
                    </TextBlock>
                </Border>

                <Border Grid.Row="1" BorderBrush="Black" BorderThickness="2" Margin="10">
                    <TextBlock TextWrapping="Wrap">
                        <TextBlock.Text>
                            This is my first TextBlock. It contains the same basic text as the others
                        </TextBlock.Text>
                    </TextBlock>
                </Border>

                <Border Grid.Row="2" BorderBrush="Black" BorderThickness="2" Margin="10">
                    <TextBlock TextWrapping="Wrap">
                        <TextBlock.Text>
                            This is my first TextBlock. It contains the same basic text as the others
                        </TextBlock.Text>
                    </TextBlock>
                </Border>

                <Border Grid.Row="3" BorderBrush="Black" BorderThickness="2" Margin="10">
                    <TextBlock TextWrapping="Wrap">
                        <TextBlock.Text>
                            This is my first TextBlock. It contains the same basic text as the others
                        </TextBlock.Text>
                    </TextBlock>
                </Border>

            </Grid>              
            
        </Grid>

        <Border Grid.Row="3" BorderBrush="Black" BorderThickness="2" Margin="10">

        </Border>

    </Grid>
</Page>

