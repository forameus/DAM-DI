<Page
    x:Class="_20_Styles_Ej2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_20_Styles_Ej2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:st="using:_20_Styles_Ej2"
    mc:Ignorable="d">

    <!--Style-->
    <Page.Resources>
        <Style TargetType="Button" x:Key="botonRaro" BasedOn="{StaticResource botonEspecial}">
            <Setter Property="Content" Value="Green"/>
        </Style>
    </Page.Resources>

    <!--Botones-->
    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button Style="{StaticResource botonEspecial}" Content="Botón con estilo" HorizontalAlignment="Center"/>
        <Button Content="Botón sin estilo" HorizontalAlignment="Center"/>
        <Button Style="{StaticResource botonEspecial}" Content="Botón con estilo" HorizontalAlignment="Center"/>
    </StackPanel>
</Page>